<div class="container mt-1">
  <div class="row">
    <div class="col-md-8 pt-3 offset-2">
      <h1>店舗情報編集</h1>
      <%= form_with model:@shop, local: true do |f| %>
       <h4>店舗外観画像</h4>
        <%= f.attachment_field :image %>
        <h4>ショップ名</h4>
        <%= f.text_field :name, size: "30x5" %>
        <h4>おすすめのポイント</h4>
        <%= f.text_area :introduction, size: "30x5" %>
        <h4>電話番号</h4>
        <%= f.text_field :telephone_number %>
        <h4>住所</h4> 
        <%= f.text_area :address, size: "30x2" %>
        <h4>お店のURL</h4> 
        <%= f.text_area :url, size: "30x2"  %>
        <div class="col-md-6 text-center btn-group-vertical offset-3 mt-3">
          <%= f.submit '保存', class: "btn btn-outline-success"  %>
        </div>
      <% end %>
    </div>
  </div>
</div>